{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "@components/*": ["src/components/*"],
      "@global/*": ["src/global/*"],
      "@routing/*": ["src/routing/*"],
      "@pages/*": ["src/pages/*"],
      "@redux/*": ["src/redux/*"],
      "@networking/*": ["src/networking/*"],
      "@features/*": ["src/features/*"]
    }
  },
  "include": [
    "src",
    "cypress/e2e/SignUpForm.spec.cy.tsx",
    "src/components/library/Alert/Alert.spec.cy.tsx",
    "src/components/library/Dropdown/Dropdown.spec.cy.tsx",
    "src/components/library/Button/Button.spec.cy.tsx",
    "src/components/containers/PokerGame/features/hand-evaluators/TwoPairEvaluator.spec.cy.ts",
    "src/components/containers/PokerGame/features/hand-evaluators/ThreeOfAKindEvaluator.spec.cy.ts",
    "src/components/containers/PokerGame/features/hand-evaluators/FlushEvaluator.cy.ts",
    "src/components/containers/PokerGame/features/hand-evaluators/FourOfAKindEvaluator.spec.cy.ts",
    "src/components/containers/PokerGame/features/hand-evaluators/FullHouseEvaluator.spec.cy.ts",
    "src/components/containers/PokerGame/features/hand-evaluators/PairEvaluator.spec.cy.ts",
    "src/components/containers/PokerGame/features/hand-evaluators/RoyalFlushEvaluator.spec.cy.ts",
    "src/components/containers/PokerGame/features/hand-evaluators/StraighFlushEvaluator.spec.cy.ts",
    "src/components/containers/PokerGame/features/hand-evaluators/StraightEvaluator.spec.cy.ts"
  ]
}
